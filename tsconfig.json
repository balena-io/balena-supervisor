{
	"compilerOptions": {
		"target": "ES2019",
		"module": "commonjs",
		"strict": true,
		"strictFunctionTypes": false,
		"strictPropertyInitialization": false,
		"preserveConstEnums": true,
		"inlineSourceMap": true,
		"outDir": "./build/",
		"skipLibCheck": true,
		"lib": ["es6"],
		"resolveJsonModule": true,
		"allowJs": true,
		"baseUrl": "./",
		"paths": {
			"~/*": [ "*" ]
		}
	},
	"include": ["src/**/*", "test/**/*", "typings/**/*.d.ts"]
}
